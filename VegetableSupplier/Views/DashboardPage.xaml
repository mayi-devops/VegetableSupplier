<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VegetableSupplier.Views.DashboardPage"
             Title="{x:Static resx:AppResources.Dashboard}">
    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Quick Actions -->
        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15" Margin="0,0,0,20">
            <Button Grid.Column="0"
                    Text="{x:Static resx:AppResources.NewInvoice}"
                    Command="{Binding CreateInvoiceCommand}"
                    Style="{StaticResource PrimaryButton}"/>
            
            <Button Grid.Column="1"
                    Text="{x:Static resx:AppResources.AddVendor}"
                    Command="{Binding AddVendorCommand}"
                    Style="{StaticResource SecondaryButton}"/>
            
            <Button Grid.Column="2"
                    Text="{x:Static resx:AppResources.Vegetables}"
                    Command="{Binding ManageVegetablesCommand}"
                    Style="{StaticResource SecondaryButton}"/>
        </Grid>

        <!-- Recent Transactions -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">
                <Label Text="{x:Static resx:AppResources.RecentTransactions}"
                       FontSize="Large"
                       FontAttributes="Bold"/>

                <CollectionView ItemsSource="{Binding RecentInvoices}"
                              EmptyView="{x:Static resx:AppResources.NoInvoicesFound}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5" Padding="15">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                    <Label Text="{Binding VendorName}"
                                           FontAttributes="Bold"/>
                                    
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalAmount, StringFormat='â‚¹{0:N2}'}"
                                           FontAttributes="Bold"/>
                                    
                                    <Label Grid.Row="1"
                                           Text="{Binding Date, StringFormat='{0:d}'}"
                                           TextColor="{StaticResource Gray500}"/>
                                    
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding Status}"
                                           TextColor="{StaticResource Primary}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>